<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Swapper" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/steel_blue</item>
        <item name="colorPrimaryVariant">@color/gray_web</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_steel_blue</item>
        <item name="colorSecondaryVariant">@color/heliotrope_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/raisin_black</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/CustomButton</item>
    </style>
    
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
